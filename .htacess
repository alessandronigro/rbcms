# Attiva la riscrittura URL
RewriteEngine On
RewriteBase /

# Gestisci i file esistenti (JS, CSS, immagini, ecc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tutto il resto viene reindirizzato a index.html
RewriteRule ^ index.html [L]

# Imposta correttamente il tipo MIME per i file statici di Vite
AddType application/javascript .js
AddType text/css .css
AddType application/json .json
AddType image/svg+xml .svg
AddType application/wasm .wasm

# Abilita la compressione se il server lo supporta
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Imposta caching per le risorse statiche
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/* "access plus 1 year"
</IfModule>
